# HTTP server
PORT=3000

# Folder where auth state and event log are persisted
DATA_DIR=./data

# Webhook target for incoming messages and status callbacks
WEBHOOK_URL=

# Webhook retry tuning
WEBHOOK_TIMEOUT_MS=8000
WEBHOOK_MAX_RETRIES=8
WEBHOOK_RETRY_BASE_MS=1000
WEBHOOK_RETRY_MAX_MS=30000

# In-memory event retention cap (events are also appended to data/events.log)
EVENT_RETENTION=2000

# Reconnect tuning for WhatsApp socket
RECONNECT_BASE_MS=1500
RECONNECT_MAX_MS=30000

# Express JSON limit to support media payloads
JSON_LIMIT=25mb
